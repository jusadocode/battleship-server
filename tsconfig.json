{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist", // Output directory for compiled JavaScript files
    "rootDir": "src", // Source directory for your TypeScript files
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
